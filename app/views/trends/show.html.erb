<% title "Trends for #{@title}" %>
<% content_for(:search_bar){ trend_days_filter } %>

<%= trend_chart 'trend_graph', "#{@title}", "last #{@range} days", trend_data(@trends, @range.days.ago) %>

<table class="table table-condensed" >
  <% head = @hosts ? "Hosts" : "Values" %>  <th colspan="4"><%= head %></th>
  <tr>
    <% list = @hosts.nil? ? @trends : @hosts %>
    <% list.in_groups(4, false) do |group| %>
        <div class="span3">
          <td>
            <% group.each do |item| -%>
                <ul class="base">
                  <li>
                    <% opts = item.name? ? item.name : item.fact_value %>
                    <% if @hosts %>
                      <%= link_to(opts, host_path(:id => opts), :title => "Show Host") %>
                    <% else %><table class="table table-condensed table-layout: fixed"><tr><td style="width: 80%; border-top: none" >
                      <%= link_to opts, trend_path(:id => item.id, 
                                                   :search => "facts.#{item.fact_name} = \"#{item.fact_value}\""),                                                   :title => "Trend Details" %></td><td style="width: 20%; border-top: none"><%= item.trend_counters.last.count %></td></tr></table>
                    <% end %>
                  </li>
                </ul>
            <% end -%>
          </td>
        </div>
    <% end -%>
  </tr>
</table>
